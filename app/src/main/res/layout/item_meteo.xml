<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="20dp"
    android:id="@+id/cl"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Update_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/meteoImg"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="43dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/meteo"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:color/background_dark"
        android:layout_marginRight="43dp"
        android:layout_marginLeft="16dp" />


    <TextView
        android:id="@+id/meteo_Value"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="76dp"
        android:layout_marginTop="36dp"
        android:text="Weather_Value"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/meteo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="76dp" />

    <TextView
        android:id="@+id/meteo"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="46dp"
        android:layout_marginTop="36dp"
        android:text="Weather"
        app:layout_constraintEnd_toStartOf="@+id/meteo_Value"
        app:layout_constraintStart_toEndOf="@+id/meteoImg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="46dp" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:text="Temperature"
        app:layout_constraintEnd_toStartOf="@+id/tempe_value"
        app:layout_constraintTop_toBottomOf="@+id/meteo"
        android:layout_marginRight="24dp" />

    <TextView
        android:id="@+id/tempe_value"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="8dp"
        android:text="Temperature_Value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meteo_Value"
        android:layout_marginRight="52dp" />


</android.support.constraint.ConstraintLayout>